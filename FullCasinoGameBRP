    private void ChangeColourActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_ChangeColourActionPerformed
        
        Random r = new Random();
        int randomColour = r.nextInt(2);
        int randomNumber = r.nextInt(38) + 1;
        
        nameWheel.setText(Integer.toString(randomNumber));
        int blackOrRed = randomNumber%2;
        
        if (blackOrRed == 0) {
            Colour.setBackground(Color.red);
        }else if (blackOrRed != 0) {
            Colour.setBackground(Color.black);
        }
        
    }//GEN-LAST:event_ChangeColourActionPerformed

    private void Red2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_Red2ActionPerformed
        chosen = chosen + 2;
    }//GEN-LAST:event_Red2ActionPerformed

